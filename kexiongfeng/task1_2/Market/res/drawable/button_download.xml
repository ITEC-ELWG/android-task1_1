<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:state_pressed="true">
        <shape>
            <solid
                    android:color="#49BBE5" />
            <corners
                    android:radius="2dp" />
            <padding
                    android:left="10dp"
                    android:top="2dp"
                    android:right="10dp"
                    android:bottom="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                    android:color="#C8C8C8" />
            <corners
                    android:radius="2dp" />

<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/music_list_margin_left">

    <TextView
        android:id="@+id/music_list_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/music_list_each_height"
        android:paddingLeft="@dimen/music_list_title_padding_left"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:maxEms="12"
        android:textSize="@dimen/music_list_title"/>

    <TextView
        android:id="@+id/music_list_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/music_list_artist"
        android:maxEms="7"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/music_list_title"
        android:textColor="@color/music_list_artist_color"/>

    <TextView
        android:id="@+id/music_list_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/music_list_duration"
        android:paddingRight="@dimen/music_list_title_padding_left"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>
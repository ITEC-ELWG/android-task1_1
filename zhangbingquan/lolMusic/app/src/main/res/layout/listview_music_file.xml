<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/music_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/music_list_title"/>

    <TextView
        android:id="@+id/music_list_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/music_list_artist"
        android:layout_below="@id/music_list_title"/>

    <TextView
        android:id="@+id/music_list_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/music_list_duration"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>